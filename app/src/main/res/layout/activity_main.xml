<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_background"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/redColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/red_background"/>

            <ImageButton
                android:id="@+id/orangeColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/orange_background"/>

            <ImageButton
                android:id="@+id/yellowColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/yellow_background"/>

            <ImageButton
                android:id="@+id/limeGreenColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/lime_green_background"/>

            <ImageButton
                android:id="@+id/greenColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/green_background"/>

            <ImageButton
                android:id="@+id/cyanColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/cyan_background"/>

            <ImageButton
                android:id="@+id/blueColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/blue_background"/>

            <ImageButton
                android:id="@+id/purpleColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/purple_background"/>

            <ImageButton
                android:id="@+id/blackColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/black_background"/>

            <ImageButton
                android:id="@+id/whiteColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/white_background"/>

            <!-- Add more color buttons here as needed -->

        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <include layout="@layout/paint_view"/>

    </RelativeLayout>

</RelativeLayout>